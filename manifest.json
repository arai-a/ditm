{
  "manifest_version": 2,
  "name": "DITM",
  "version": "1.3.0",
  "description": "Developer In The Middle.",

  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],

  "background": {
    "scripts": [
      "background.js"
    ]
  },

  "icons": {
    "48": "images/icon-48.png",
    "96": "images/icon-96.png"
  },

  "devtools_page": "ditm-dt.html",

  "applications": {
    "gecko": {
      "id": "ditm@unmht.org",
      "strict_min_version": "68.0"
    }
  }
}
